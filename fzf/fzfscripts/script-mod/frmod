#  printf '%s\n' "$@"
#  printf '%s' "${colors[reset]}"
#}



_rgmod () {
    rg --no-messages \
       --files \
       -N /lib/modules/"$(uname -r)" \
       --no-max-columns-preview \
       --no-line-number \
       --no-heading \
       --color always \
       --trim
}

_rmodsearch () {
  rg \
    \.ko\.xz \
    --no-heading \
    --no-filename \
    --no-line-number
}

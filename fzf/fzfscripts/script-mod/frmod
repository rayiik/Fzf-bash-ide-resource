declare Fvar=''
declare _tmpmodpath="$HOME/tmp/mod.tmp"
declare -A colors
colors[red]=$(tput setaf 1)
colors[green]=$(tput setaf 2)
colors[blue]=$(tput setaf 4)
colors[reset]=$(tput sgr0)

fzvar () {
	echo "$1"
	tfile="$1"
if [ -n "$tfile" ]; then
	 Fvar="$tfile"; else
	 Fvar='.'
fi
}
#
